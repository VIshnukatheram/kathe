@{
}
@model Registration
@foreach (var item in ViewBag.custDetails)
{
    <div class="container">
        <div class="row">
            <div class="col-sm-4"></div>
            <div class="col-sm-4">
                <form class="form-horizontal" asp-controller="Customer" asp-action="Edit" asp-route-id="@item.Id">
                    <div class="form-group">
                        <label class="control-label">FirstName</label>
                        <input asp-for="FirstName" class="form-control" type="text" value="@item.FirstName" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">LastName</label>
                        <input asp-for="LastName" class="form-control" type="text" value="@item.LastName" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">LoginUser</label>
                        <input asp-for="LoginUser" class="form-control" type="text" value="@item.LoginUser" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Email</label>
                        <input asp-for="Email" class="form-control" type="text" value="@item.Email" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">PhoneNumber</label>
                        <input asp-for="PhoneNumber" class="form-control" type="text" value="@item.PhoneNumber" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-primary" />
                    </div>
                </form>
            </div>
            <div class="col-sm-4"></div>
        </div>
    </div>
}

